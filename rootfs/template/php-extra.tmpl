cgi.fix_pathinfo = 0
expose_php = Off
memory_limit = {{ default .Env.PHP_MEMORY_LIMIT "128M" }}
date.timezone = {{ .Env.TZ }}
upload_max_filesize = {{ default .Env.PHP_UPLOAD_MAX_SIZE "50M" }}
session.save_handler = "{{ default .Env.PHP_SESSION_SAVE_HANDLER "files" }}"
session.save_path = "{{ default .Env.PHP_SESSION_SAVE_PATH "/var/lib/php/sessions" }}"
session.gc_divisor = {{ default .Env.PHP_SESSION_GC_DIVISOR "100" }}
session.gc_probability = {{ .Env.PHP_SESSION_GC_PROPABILITY }}
